{
  "env": {
    "jest": true
  },
  "extends": [
    "react-app",
    "airbnb"
  ],
  "plugins": [
  ],
  "rules": {
    "semi": 0,
    // suppress errors for missing 'import React' in files
    "react/react-in-jsx-scope": "off",
    // allow jsx syntax in js files (for next.js project)
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "linebreak-style": 0
    //should add ".ts" if typescript project
  }
}
